@page "/AddStudent"
@using Students_Challenge.Data
@inject StudentService studentService
@inject NavigationManager NavigationManager
@using System.Collections.Generic;

<h2>Add Student</h2>
<hr />

<form>
    
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input form="Name" class="form-control" @bind="@obj.name" />
            </div>
            <div class="form-group">
                <label for="Class ID" class="control-label">Class ID</label>
                <select @bind="@obj.class_id" class="form-control">
                    <option value="">-Select Class</option>
                    <option value="1">IT</option>
                    <option value="2">Math</option>
                    <option value="3">Engineering</option>


                </select>
            </div>
            <div class="form-group">
                <label for="Country ID" class="control-label">Country ID</label>

                <select @bind="@obj.country_id" class="form-control">

                    <option value="">-Select Country</option>
                    <option value="1">OMAN</option>
                    <option value="2">UAE</option>
                    <option value="3">KSA</option>
                    <option value="4">QATAR</option>
                </select>

            </div>
            <div class="form-group">
                <label for="Birth Date" class="control-label">Birth Date</label>
                <input form="Birth Date" class="form-control" @bind="@obj.date_of_birth" />
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateStudent" value="Save" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {
    Student obj = new Student();
   

    protected async void CreateStudent()
    {
        await studentService.InsertStudentAsync(obj);
        NavigationManager.NavigateTo("Students");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Students");
    }



}